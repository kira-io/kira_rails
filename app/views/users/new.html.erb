<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>kira</h1>
        <h3>sign up</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <form actions="/users/create" method="post">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <p>
            <label for="alias">alias</label>
            <input class="pull-right" type="text" name="user[:alias]">
          </p>
          <p>
            <label for="password">password</label>
            <input class="pull-right" type="password" name="user[:password]">
          </p>
          <p>
            <label for="confirm_password">confirm password</label>
            <input class="pull-right" type="password" name="user[:password]">
          </p>          
          <input class="pull-right" type="submit" value="join">
        </form>
      </div>
    </div>

    <div class="row">
      <div></div>
    </div>

  </div>
</div>
