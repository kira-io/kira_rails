<div id="user-show-header">
  <div class="row">
    <div class="col-sm-2">
      <h2><a href="/users/<%= session[:user_id] %>"><%= @tmp_alias %></a></h2>
    </div>
    <div class="col-sm-3 col-sm-offset-3">
      <h3>24 joys left</h3>
    </div>
    <div class="col-sm-2">
      <h3><a href="/entries/new">write</a></h3>
    </div>
    <div class="col-sm-2">
      <h3><a href="/signout">logout</a></h3>
    </div>
  </div>
</div>


<div id='search' class='row form-group'>
  <div class='col-sm-6 col-sm-offset-3'>
        <input type="text" class="form-control" placeholder="Search entries here"> 
     </div>
</div>

<% @posts.each do |post| %>
  <div class='post row'>
    <div class='col-sm-10 col-sm-offset-1'>
      <div class='post_header'>
        <div>
          <span class="status glyphicon glyphicon-unchecked"></span>
          <h3><%= post.name%>, <small>from California</small></h3>
        </div>
        <div class='pull-right'>
          <span class="joys glyphicon glyphicon-heart"></span>
          <h4>24 joys</h4>
        </div>
      </div>
      <a id="<%= post.id %>" class="post_title" href="/posts/<%= post.id %>"><%= post.title %></a>
      <p><%= post.content %></p>
    </div>
  </div>
<% end %>

