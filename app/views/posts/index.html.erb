<% content_for :command_one do %>
  <a href="/users/<%= current_user.id %>"><span class="glyphicon glyphicon-user"></span></a>
<% end %>
<% content_for :command_two do %>
  <a href="/posts/<%= current_user.id %>/messages"><span class="glyphicon glyphicon-envelope"></span></a>
<% end %>
<% content_for :command_three do %>
  <a href="/signout"><span id="logout" class="glyphicon glyphicon-log-out"></span></a>
<% end %>

<div ng-app='myApp'>
  <div ng-controller='PostsController'>


    <div id='search' class='row form-group'>
      <div class='col-sm-6 col-sm-offset-3'>
        <input type="text" class="form-control" ng-model='filter_name' placeholder="Search entries here"> 
      </div>
    </div>
    <div class='post row' ng-repeat=" post in posts | filter: filter_name ">
      <div class='col-sm-10 col-sm-offset-1'>
        <div class='post_header'>
          <div>
            <p>{{ today }}</p>
            <h3><i class='fa fa-circle {{ post.color }}'></i></h3>
            <h3>{{ post.name }}, <small>FROM LOCATION</small></h3>
            <p>{{post.created_at}}</p>
          </div>
          <div class='pull-right'>
            <span class="joys glyphicon glyphicon-heart"></span>
            <h4>{{ post.joys }}</h4>
          </div>

        </div>
        <a id="{{ post.id }}" class="post_title" ng-href="/posts/{{ post.id }}">{{ post.title }}</a>
        <p ng-bind-html="post.content"></p>
      </div>
    </div>

  </div>
</div>
