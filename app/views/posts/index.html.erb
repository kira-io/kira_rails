<% content_for :command_one do %>
  <a href="/users/<%= current_user.id %>"><span class="glyphicon glyphicon-user"></span></a>
<% end %>
<% content_for :command_two do %>
  <a href="/users_messages"><span class="glyphicon glyphicon-envelope"></span></a>
<% end %>
<% content_for :command_three do %>
  <a href="/signout"><span id="logout" class="glyphicon glyphicon-log-out"></span></a>
<% end %>

<div id='search' class='row form-group'>
  <div class='col-sm-6 col-sm-offset-3'>
        <input type="text" class="form-control" placeholder="Search entries here"> 
     </div>
</div>

<% @posts.each do |post| %>
  <div class='post row'>
    <div class='col-sm-10 col-sm-offset-1'>
      <div class='post_header'>
        <div>
          <span class="status glyphicon glyphicon-unchecked"></span>
          <h3><%= post.name%>, <small>from California</small></h3>
        </div>
        <div class='pull-right'>
          <span class="joys glyphicon glyphicon-heart"></span>
          <h4>24 joys</h4>
        </div>
      </div>
      <a id="<%= post.id %>" class="post_title" href="/posts/<%= post.id %>"><%= post.title %></a>
      <p><%= post.content %></p>
    </div>
  </div>
<% end %>

